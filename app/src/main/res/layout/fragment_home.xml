<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1C1C1C">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="#E0E0E0"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/button_container_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/textview5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mbl2_desc"
            android:textColor="#E0E0E0"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/mbl2_load"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Load with mbl2"
            android:layout_gravity="center"
            android:backgroundTint="#2196F3"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/draco_desc"
            android:textColor="#E0E0E0"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/draco_load"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Load with draco"
            android:layout_gravity="center"
            android:backgroundTint="#2196F3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_container_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launcher logs here:"
            android:textColor="#E0E0E0"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/listener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:gravity="center"
            android:minHeight="48dp"/>

    </LinearLayout>

</LinearLayout> 